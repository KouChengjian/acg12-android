<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/news_item_bg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edt_palette_create"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_palette_ok"
        android:background="@drawable/selector_edittext_normal"
        android:ems="10"
        android:gravity="center|left"
        android:hint="新建一个画板~"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="5dp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_palette_ok"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_ok" />

</RelativeLayout>