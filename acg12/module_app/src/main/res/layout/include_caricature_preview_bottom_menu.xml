<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <!-- <TextView
                 android:id="@+id/tv_curr_pager"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/sp_12"
                 />
 -->
            <SeekBar
                android:id="@+id/bottom_deekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:progressDrawable="@drawable/seekbar_progress_drawable"
                android:thumb="@drawable/bg_seek_thumb" />

            <!-- <TextView
                 android:id="@+id/tv_sum_pager"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/sp_12"
                 />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bottom_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_caricature_menu"
                android:gravity="center"
                android:text="目录"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bottom_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_caricature_brightness"
                android:gravity="center_horizontal"
                android:text="亮度"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bottom_switch_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/ic_caricature_change"
                android:gravity="center_horizontal"
                android:text="切换"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_bottom_switch_module"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:drawableTop="@mipmap/ic_caricature_module"
                android:gravity="center"
                android:text="模式"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</merge>