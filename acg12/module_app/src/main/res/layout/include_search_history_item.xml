<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_rect_search_history"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="Helloworld"
        android:textColor="@color/title1"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_search_history"
        android:layout_alignRight="@+id/tv_search_history"
        android:layout_alignTop="@+id/tv_search_history"
        android:src="@mipmap/ic_del" />
</RelativeLayout>