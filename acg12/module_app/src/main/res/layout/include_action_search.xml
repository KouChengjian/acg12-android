<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.acg12.lib.widget.DeletableEditText
            android:id="@+id/edt_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_search"
            android:drawableLeft="@mipmap/ic_action_title_search"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/ic_login_delete"
            android:gravity="center|left"
            android:hint="搜索感兴趣的内容..."
            android:imeOptions="actionSearch"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/title"
            android:textColorHint="@color/title1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_search_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>