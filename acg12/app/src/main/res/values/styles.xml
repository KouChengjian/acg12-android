<resources>

    <style name="Theme.MaterialSheetFab.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AnimFade" parent="@android:style/Animation.Activity" mce_bogus="1">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_out_to_right</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_in_from_left</item>
        <item name="android:taskToFrontEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:taskToFrontExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:taskToBackEnterAnimation">@anim/slide_out_to_right</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_in_from_left</item>
    </style>

    <style name="Theme.MaterialSheetFab" parent="Theme.MaterialSheetFab.Base"></style>

    <style name="Theme.MaterialSheetFab.SwipeBackLayout" parent="Theme.MaterialSheetFab.Base">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

    <!-- toolbar -->
    <style name="Widget.MaterialSheetFab.ToolBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/theme_primary</item>
        <item name="theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MaterialSheetFab.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@color/theme_accent</item>
    </style>

    <!--end-->

    <!-- 对话框基类 -->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Light.FullScreenDialogAct" parent="@style/BaseDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="Style_Dialog_Button">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff425968</item>
        <item name="android:background">@drawable/selector_ripple_default</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:layout_marginRight">6.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>
    <!-- end -->

    <!--Popwindow-->
    <style name="Animations" />

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/popup_grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/popup_shrink_from_top</item>
    </style>

    <!-- search pop -->
    <style name="Animations.SearchPopWindow">
        <item name="android:windowEnterAnimation">@anim/popup_search_in</item>
        <item name="android:windowExitAnimation">@anim/popup_search_out</item>
    </style>

    <!--登入进度条-->

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal"></style>

    <style name="GPlusProgressBar" parent="ProgressBar.Horizontal">
        <item name="spb_stroke_separator_length">12dp</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">0.7</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_colors">@array/gplus_colors</item>
    </style>
</resources>
