<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >


    <LinearLayout
        android:id="@+id/rl_personal_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <android.support.design.widget.TabLayout
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/grey"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/theme_primary"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/theme_primary"
                app:tabTextColor="#adadad" />
        </RelativeLayout>

        <com.kcj.animationfriend.view.photo.zoom.ViewPagerFixed
            android:id="@+id/vp_personal_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs" />
    </LinearLayout>

</RelativeLayout>