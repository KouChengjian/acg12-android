<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textColor="@color/guide_color"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/alpha"
        android:background="@drawable/item_bg_greey_selector" >

        <TextView
            android:id="@+id/tv_dl"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/view1"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_dl"
            android:orientation="vertical"
            android:padding="5dp" 
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_download_name"
                style="@style/Smile.TextView._Black"
                android:layout_alignLeft="@+id/view1"
                android:padding="2dp"
                android:singleLine="true"
                android:text="hahahah"
                android:textSize="16sp" 
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" 
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_download_plan"
                        style="@style/Smile.TextView._Black"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="hahahah"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_download_state"
                        style="@style/Smile.TextView._Black"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:text="hahahah"
                        android:textSize="12sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/grey" />
    </RelativeLayout>

</RelativeLayout>