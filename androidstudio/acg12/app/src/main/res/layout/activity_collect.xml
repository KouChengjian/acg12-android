<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialSheetFab.ToolBar" />

    <RelativeLayout
        android:id="@+id/rl_collect_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/news_item_bg"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_collect_icon"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:src="@drawable/bg_pic_loading" />

        <EditText
            android:id="@+id/edt_collect_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_collect_icon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_collect_icon"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_collect_icon"
            android:background="@drawable/selector_edittext"
            android:gravity="left|top"
            android:hint=""
            android:inputType="textMultiLine"
            android:minLines="5"
            android:paddingLeft="4dip"
            android:paddingRight="4dip" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_collect_palette"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/common_actionbar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_create_palette"
        android:padding="2dp" >

        <TextView
            android:id="@+id/tv_collect_palette"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="画板选择"
            android:textSize="15sp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon_item_more"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_collect_save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_logout"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffff" />

</LinearLayout>