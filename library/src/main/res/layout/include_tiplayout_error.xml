<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_tipview_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tv_tiplayout_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_loading_null"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/tv_tiplayout_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="网络异常"
        android:textColor="@color/text_999999"
        android:textSize="16sp" />


    <com.acg12.lib.widget.BGButton
        android:id="@+id/bg_refush"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="刷新"
        android:textSize="16sp"
        app:normalSolid="@color/white"
        app:normalStrokeColor="@color/text_999999"
        app:normalStrokeWidth="1dp"
        app:normalTextColor="@color/text_999999"
        app:pressedStrokeColor="@color/text_999999"
        app:pressedStrokeWidth="1dp"
        app:pressedTextColor="@color/text_999999"
        app:radii="20dp" />
    <!--app:pressedSolid="@color/pressColor"-->

</LinearLayout>