<item android:id="@android:id/background">  
        <shape> 
            <corners android:radius="5dip" />  
  
            <gradient  
                android:angle="270"  
                android:centerColor="#ff5a5d5a"  
                android:centerY="0.75"  
                android:endColor="#ff747674"  
                android:startColor="#ff9d9e9d" />  
        </shape>  
    </item>  
    <item android:id="@android:id/secondaryProgress">  
        <clip>  
            <shape>  
                <corners android:radius="5dip" />  
  
                <gradient  
                    android:angle="270"  
                    android:centerColor="#ff3d3e3d"  
                    android:centerY="0.75"  
                    android:endColor="#ff3d3e3d"  
                    android:startColor="#ff3d3e3d" />  
            </shape>  
        </clip>  
    </item>  
    <item android:id="@android:id/progress">  
        <clip>  
            <shape>  
                <corners android:radius="1dip" />  
  
                <gradient  
                    android:angle="270"  
                    android:centerColor="#ffD95555"  
                    android:centerY="0.75"  
                    android:endColor="#ffD95555"  
                    android:startColor="#ffD95555" />  
            </shape>  
        </clip>  
    </item>   
</layer-list>