<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nick_area_commit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_comment_comment"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Widget.MaterialSheetFab.ToolBar" />

    <EditText
        android:id="@+id/nick_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dip"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dip"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_edittext_account"
        android:ems="10"
        android:hint="昵称"
        android:minHeight="40dp"
        android:paddingLeft="4dip" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/nick_comment_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dip"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_logout"
        android:gravity="center"
        android:minWidth="80dp"
        android:padding="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>