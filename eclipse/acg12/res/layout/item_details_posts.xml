<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dip"
        android:visibility="gone" >

        <!-- android:padding="8dip" -->

        <ImageView
            android:id="@+id/details_comment_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/user_icon_default_main" />

        <TextView
            android:id="@+id/details_comment_name"
            style="@style/TextTheme"
            android:layout_alignBottom="@id/details_comment_logo"
            android:layout_alignTop="@id/details_comment_logo"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/details_comment_logo"
            android:gravity="center_vertical"
            android:text="岁月抚伤" />

        <TextView
            android:id="@+id/details_comment_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/details_comment_name"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/details_comment_name"
            android:background="@drawable/bg_comment_floor"
            android:text="楼主"
            android:textColor="#888888"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/details_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/details_comment_logo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/details_comment_logo"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_fav_normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/details_comment_append"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/details_comment_logo"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/details_comment_logo"
            android:gravity="center"
            android:text="回复"
            android:textColor="#888888" />

        <!-- android:background="@drawable/bg_comment_floor" -->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="8dip" >

        <LinearLayout
            android:id="@+id/ll_pic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_comment_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_pic_loading" 
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/details_comment_text"
            style="@style/TextTheme"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

</LinearLayout>