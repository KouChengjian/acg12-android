<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/two_commit_scroll"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <include
                android:id="@+id/two_comment_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_details_posts" />

            <View
                android:id="@+id/v_comment_"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/two_comment_item"
                android:background="#dddddd" />

            <ListView
                android:id="@+id/two_comment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/v_comment_"
                android:divider="@null" >
            </ListView>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>